{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "../",
    "outDir": "./build/dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    // "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "references": [
    {
      "path": "../app1"
    }
  ],
  "paths": {
    "src/*": [
      "src/*"
    ],
    "@app/app1/*": [
      "../app1/*"
    ]
  },
  "include": [
    "src",
    "../app1/src"
  ],
  "exclude": [
    "build",
    "scripts",
    "node_modules",
    "ios",
    "android"
  ]
}